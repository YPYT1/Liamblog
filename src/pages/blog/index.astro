---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { dbAll } from '@/lib/db'
import { parseTags } from '@/lib/content'

const env = Astro.locals.runtime.env
const page = Math.max(1, Number(Astro.url.searchParams.get('page') || '1'))
const pageSize = 8
const offset = (page - 1) * pageSize
const posts = await dbAll(
  env.DB,
  'SELECT id, slug, title, summary, cover_image, published_at, tags, category, series, pinned FROM posts WHERE status = ? ORDER BY pinned DESC, published_at DESC LIMIT ? OFFSET ?',
  ['published', pageSize, offset],
)
const totalRows = await dbAll<{ total: number }>(env.DB, 'SELECT COUNT(*) as total FROM posts WHERE status = ?', [
  'published',
])
const total = (totalRows[0] as unknown as { total: number })?.total ?? 0
const totalPages = Math.max(1, Math.ceil(total / pageSize))
---
<BaseLayout title="博客" description="Liam 的博客">
  <section class="mx-auto max-w-6xl px-4 py-10">
    <h1 class="text-2xl font-semibold">博客</h1>
    <p class="mt-2 text-sm text-slate-600">最新文章与技术记录。</p>
    <div class="mt-4 flex flex-wrap gap-3 text-sm text-slate-500">
      <a class="underline" href="/blog/tags">标签</a>
      <a class="underline" href="/blog/categories">分类</a>
      <a class="underline" href="/blog/series">系列</a>
    </div>

    <div class="mt-8 grid gap-4 md:grid-cols-2">
      {posts.length === 0 && (
        <div class="glass-card p-6 text-sm text-slate-600">暂无文章，先去后台写一篇吧。</div>
      )}
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="glass-card block p-6 transition hover:-translate-y-1">
          {post.cover_image && (
            <div class="mb-4 overflow-hidden rounded-xl border border-black/5">
              <img src={post.cover_image} alt={post.title} class="h-40 w-full object-cover" loading="lazy" />
            </div>
          )}
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold">{post.title}</h2>
            {post.pinned ? <span class="text-xs text-[var(--ifm-color-primary)]">置顶</span> : null}
          </div>
          {post.summary && <p class="mt-2 text-sm text-slate-600">{post.summary}</p>}
          <div class="mt-3 flex flex-wrap items-center gap-2 text-xs text-slate-500">
            <span>{post.published_at || ''}</span>
            {post.category && <span class="rounded-full bg-black/5 px-2 py-0.5">{post.category}</span>}
            {parseTags(post.tags).slice(0, 3).map((tag) => (
              <span class="rounded-full bg-black/5 px-2 py-0.5">#{tag}</span>
            ))}
          </div>
        </a>
      ))}
    </div>

    {totalPages > 1 && (
      <div class="mt-8 flex items-center justify-between text-sm text-slate-500">
        <a class={page <= 1 ? 'pointer-events-none opacity-40' : ''} href={`/blog?page=${page - 1}`}>
          上一页
        </a>
        <span>
          {page} / {totalPages}
        </span>
        <a class={page >= totalPages ? 'pointer-events-none opacity-40' : ''} href={`/blog?page=${page + 1}`}>
          下一页
        </a>
      </div>
    )}
  </section>
</BaseLayout>
