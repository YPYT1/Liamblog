---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { dbAll } from '@/lib/db'

const { category } = Astro.params
const env = Astro.locals.runtime.env
const page = Math.max(1, Number(Astro.url.searchParams.get('page') || '1'))
const pageSize = 12
const offset = (page - 1) * pageSize
const docs = await dbAll(
  env.DB,
  'SELECT slug, title, summary, category, published_at FROM docs WHERE status = ? AND category = ? ORDER BY order_index ASC, published_at DESC LIMIT ? OFFSET ?',
  ['published', category, pageSize, offset],
)
const totalRows = await dbAll<{ total: number }>(
  env.DB,
  'SELECT COUNT(*) as total FROM docs WHERE status = ? AND category = ?',
  ['published', category],
)
const total = (totalRows[0] as unknown as { total: number })?.total ?? 0
const totalPages = Math.max(1, Math.ceil(total / pageSize))
---
<BaseLayout title={category} description={`文档分类 ${category}`}>
  <section class="mx-auto max-w-4xl px-4 py-10">
    <h1 class="text-2xl font-semibold">{category}</h1>
    <div class="mt-6 space-y-3">
      {docs.map((doc) => (
        <a class="glass-card block p-5" href={`/docs/${doc.slug}`}>
          <div class="text-base font-medium">{doc.title}</div>
          {doc.summary && <div class="mt-2 text-sm text-slate-600">{doc.summary}</div>}
          <div class="mt-2 text-xs text-slate-400">{doc.published_at}</div>
        </a>
      ))}
      {docs.length === 0 && <div class="text-sm text-slate-500">暂无文档</div>}
    </div>
    {totalPages > 1 && (
      <div class="mt-8 flex items-center justify-between text-sm text-slate-500">
        <a class={page <= 1 ? 'pointer-events-none opacity-40' : ''} href={`/docs/categories/${encodeURIComponent(category)}?page=${page - 1}`}>
          上一页
        </a>
        <span>
          {page} / {totalPages}
        </span>
        <a class={page >= totalPages ? 'pointer-events-none opacity-40' : ''} href={`/docs/categories/${encodeURIComponent(category)}?page=${page + 1}`}>
          下一页
        </a>
      </div>
    )}
  </section>
</BaseLayout>
