---
const links = [
  {
    title: '内容',
    items: [
      { label: '博客', href: '/blog' },
      { label: '文档', href: '/docs' },
      { label: '归档', href: '/blog/archive' },
      { label: '项目', href: '/project' },
    ],
  },
  {
    title: '互动',
    items: [
      { label: '留言箱', href: '/guestbook' },
      { label: '搜索', href: '/search' },
      { label: 'RSS', href: '/rss.xml' },
      { label: 'Sitemap', href: '/sitemap.xml' },
    ],
  },
  {
    title: '关于',
    items: [
      { label: '关于我', href: '/about' },
    ],
  },
]
---
<footer class="mt-16 border-t border-black/5 bg-white/70 text-slate-700 backdrop-blur">
  <div class="mx-auto grid max-w-6xl grid-cols-1 gap-8 px-4 py-12 sm:grid-cols-3">
    {links.map((group) => (
      <div>
        <h3 class="mb-3 text-sm font-semibold">{group.title}</h3>
        <ul class="space-y-2 text-sm text-slate-500">
          {group.items.map((item) => (
            <li>
              <a class="transition hover:text-slate-900" href={item.href}>
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </div>
  <div class="border-t border-black/5 py-4 text-center text-xs text-slate-400">
    Liam © 2026
  </div>
</footer>
