---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Hero from '@/components/Hero.astro'
import { dbAll, dbGet } from '@/lib/db'

const env = Astro.locals.runtime.env
const latestPosts = await dbAll(env.DB, 'SELECT slug, title, summary, published_at FROM posts WHERE status = ? ORDER BY published_at DESC LIMIT 3', ['published'])
const latestDocs = await dbAll(env.DB, 'SELECT slug, title, summary, published_at FROM docs WHERE status = ? ORDER BY order_index ASC, published_at DESC LIMIT 3', ['published'])
const postCount = await dbGet<{ count: number }>(env.DB, 'SELECT COUNT(*) as count FROM posts WHERE status = ?', ['published'])
const docCount = await dbGet<{ count: number }>(env.DB, 'SELECT COUNT(*) as count FROM docs WHERE status = ?', ['published'])
---
<BaseLayout title="Liam" description="Liam 的个人博客">
  <Hero />
  <section class="mx-auto max-w-6xl px-4 py-10">
    <div class="grid gap-4 md:grid-cols-3">
      <div class="glass-card p-5">
        <div class="text-xs uppercase tracking-widest text-slate-400">Blog</div>
        <div class="mt-3 text-2xl font-semibold text-slate-800">{postCount?.count ?? 0}</div>
        <div class="mt-1 text-sm text-slate-500">已发布文章</div>
      </div>
      <div class="glass-card p-5">
        <div class="text-xs uppercase tracking-widest text-slate-400">Docs</div>
        <div class="mt-3 text-2xl font-semibold text-slate-800">{docCount?.count ?? 0}</div>
        <div class="mt-1 text-sm text-slate-500">知识文档</div>
      </div>
      <div class="glass-card p-5">
        <div class="text-xs uppercase tracking-widest text-slate-400">Search</div>
        <div class="mt-3 text-sm text-slate-600">按关键词快速找到内容</div>
        <a class="mt-4 inline-flex text-sm text-slate-700 underline" href="/search">立即搜索</a>
      </div>
    </div>

    <div class="mt-10 grid gap-6 lg:grid-cols-[1.4fr_1fr]">
      <div class="glass-card p-6">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold">最新博客</h2>
          <a class="text-sm text-slate-500" href="/blog">查看全部</a>
        </div>
        <div class="mt-4 space-y-3">
          {latestPosts.map((post) => (
            <a class="block rounded-xl border border-black/5 p-4 transition hover:bg-black/5" href={`/blog/${post.slug}`}>
              <div class="text-base font-medium">{post.title}</div>
              {post.summary && <div class="mt-2 text-sm text-slate-600">{post.summary}</div>}
              <div class="mt-2 text-xs text-slate-400">{post.published_at}</div>
            </a>
          ))}
          {latestPosts.length === 0 && <div class="text-sm text-slate-500">暂无文章</div>}
        </div>
      </div>

      <div class="glass-card p-6">
        <div class="flex items-center justify-between">
          <h2 class="text-lg font-semibold">最新文档</h2>
          <a class="text-sm text-slate-500" href="/docs">查看全部</a>
        </div>
        <div class="mt-4 space-y-3">
          {latestDocs.map((doc) => (
            <a class="block rounded-xl border border-black/5 p-4 transition hover:bg-black/5" href={`/docs/${doc.slug}`}>
              <div class="text-base font-medium">{doc.title}</div>
              {doc.summary && <div class="mt-2 text-sm text-slate-600">{doc.summary}</div>}
              <div class="mt-2 text-xs text-slate-400">{doc.published_at}</div>
            </a>
          ))}
          {latestDocs.length === 0 && <div class="text-sm text-slate-500">暂无文档</div>}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
