---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { dbAll } from '@/lib/db'
import { uniqueSorted } from '@/lib/content'

const env = Astro.locals.runtime.env
const posts = await dbAll(env.DB, 'SELECT series FROM posts WHERE status = ? AND series IS NOT NULL', ['published'])
const series = uniqueSorted(posts.map((post) => post.series).filter(Boolean))
---
<BaseLayout title="系列" description="博客系列">
  <section class="mx-auto max-w-4xl px-4 py-10">
    <h1 class="text-2xl font-semibold">系列</h1>
    <div class="mt-6 flex flex-wrap gap-2">
      {series.map((item) => (
        <a class="rounded-full bg-black/5 px-3 py-1 text-sm text-slate-600" href={`/blog/series/${encodeURIComponent(item)}`}>
          {item}
        </a>
      ))}
      {series.length === 0 && <div class="text-sm text-slate-500">暂无系列</div>}
    </div>
  </section>
</BaseLayout>
