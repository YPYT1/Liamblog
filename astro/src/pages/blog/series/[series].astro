---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { dbAll } from '@/lib/db'

const { series } = Astro.params
const env = Astro.locals.runtime.env
const posts = await dbAll(env.DB,
  'SELECT slug, title, summary, series, published_at FROM posts WHERE status = ? AND series = ? ORDER BY published_at DESC',
  ['published', series],
)
---
<BaseLayout title={series} description={`系列 ${series}`}>
  <section class="mx-auto max-w-4xl px-4 py-10">
    <h1 class="text-2xl font-semibold">{series}</h1>
    <div class="mt-6 space-y-3">
      {posts.map((post) => (
        <a class="glass-card block p-5" href={`/blog/${post.slug}`}>
          <div class="text-base font-medium">{post.title}</div>
          {post.summary && <div class="mt-2 text-sm text-slate-600">{post.summary}</div>}
          <div class="mt-2 text-xs text-slate-400">{post.published_at}</div>
        </a>
      ))}
      {posts.length === 0 && <div class="text-sm text-slate-500">暂无文章</div>}
    </div>
  </section>
</BaseLayout>
