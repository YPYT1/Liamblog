---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { dbAll } from '@/lib/db'
import { parseTags } from '@/lib/content'

const { tag } = Astro.params
const env = Astro.locals.runtime.env
const posts = await dbAll(env.DB,
  'SELECT slug, title, summary, tags, published_at FROM posts WHERE status = ? ORDER BY published_at DESC',
  ['published'],
)
const filtered = posts.filter((post) => parseTags(post.tags).includes(tag))
---
<BaseLayout title={`#${tag}`} description={`标签 ${tag}`}>
  <section class="mx-auto max-w-4xl px-4 py-10">
    <h1 class="text-2xl font-semibold">#{tag}</h1>
    <div class="mt-6 space-y-3">
      {filtered.map((post) => (
        <a class="glass-card block p-5" href={`/blog/${post.slug}`}>
          <div class="text-base font-medium">{post.title}</div>
          {post.summary && <div class="mt-2 text-sm text-slate-600">{post.summary}</div>}
          <div class="mt-2 text-xs text-slate-400">{post.published_at}</div>
        </a>
      ))}
      {filtered.length === 0 && <div class="text-sm text-slate-500">暂无文章</div>}
    </div>
  </section>
</BaseLayout>
